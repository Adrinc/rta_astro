---
import { ViewTransitions } from 'astro:transitions';
import NavigationBar from '../components/global/navigationbar/NavigationBar.astro';
import Foot from '../components/global/foot/Foot.astro';
import FigmaInfoBar from '../components/FigmaInfoBar.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

		<ViewTransitions />
	
	</head>

	<header>
		<NavigationBar />
		<FigmaInfoBar />
	</header>

	<body>
		<main>
			<slot />
		</main>
	</body>
	<footer>
		<Foot />
	</footer>
</html>


<style is:global>
	:root {
	  --primary: 209, 0, 48;
	  --secondary: #2E5899;
	  --accent: 136, 58, 234;
	  --accent-light: 224, 204, 250;
	  --accent-dark: 49, 10, 101;
	  --accent-gradient: linear-gradient(
		45deg,
		rgb(var(--accent)),
		rgb(var(--accent-light)) 30%,
		white 60%
	  );
	}
	html {
	  font-family: system-ui, sans-serif;
	  background: #ffffff;
	  height: 100%; /* Ajusta la altura de html al 100% de la ventana */
	}

  
	/* Personaliza el scrollbar */
	::-webkit-scrollbar {
	  width: 8px; /* Ajusta el ancho del scrollbar seg√∫n tus preferencias */
	  background-color: transparent; /* Hace que el fondo del scrollbar sea transparente */
	}
  
	::-webkit-scrollbar-thumb {
	  background-color: #c2c2c2; /* Color de fondo del thumb */
	  border-radius: 10px; /* Define la forma ovalada con el radio del borde */
	}
  
	::-webkit-scrollbar-track {
	  background-color: rgba(240, 240, 240, 0.1);
	  border-radius: 1px; /* Ajusta el radio del borde para que coincida con el thumb */
	  opacity: 0.1; /* Ajusta la opacidad del scrollbar */
	}
  
	header {
	  position: sticky;
	  top: 0;
	  z-index: 100;
	}
  </style>
  
